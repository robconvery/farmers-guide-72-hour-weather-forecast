{
    "name": "robconvery/farmers-guide-72-hour-weather-forecast",
    "description": "Screen scrape of Farmers Guide 72 hour weather forecast",
    "authors": [
        {
            "name": "Robert Convery",
            "email": "robconvery@me.com"
        }
    ],
    "minimum-stability": "dev",
    "repositories": [
        { "type": "vcs", "url": "https://github.com/robconvery/weather-adapter-interface" }
    ],
    "require-all": true,
    "require": {
        "php": ">=7.1",
        "ext-libxml": "*",
        "ext-dom": "*",
        "illuminate/support": "~5.0",
        "guzzlehttp/guzzle": "^6.3@dev",
        "robertconvery/weather-adapter-interface": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "orchestra/testbench": "^3.0",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "Robconvery\\FarmersGuideForecast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Robconvery\\FarmersGuideForecast\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/phpcs --standard=PSR2 src"
        ],
        "cs-fix": [
            "./vendor/bin/phpcbf --standard=PSR2 src"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Robconvery\\FarmersGuideForecast\\PackageServiceProvider"
            ]
        }
    }
}
